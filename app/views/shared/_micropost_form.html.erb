<%= form_for(@micropost) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new micropost..." %>
	</div>
	<div class="buttonbar">
		<%= f.submit "Post", class: "btn btn-large brn-primary" %>
		<div class="counter">	
			140/140
		</div>
	</div>
<% end %>